{
   "compilerOptions": {
     "outDir": "dist",
     "lib": ["ESNext", "ESNext.AsyncIterable"],
     "incremental": true,
     "target": "es2018",
     "module": "commonjs",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "baseUrl": ".",
     "paths": {
        "~/*": ["./src/*"]
     }
   },
   "include": [
     "./src/**/*",
     "./types/**/*"
   ]
}