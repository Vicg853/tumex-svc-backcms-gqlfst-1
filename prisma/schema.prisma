datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "./generated/type-graphql"
}

//* Global types
type Locales {
  en String
  pt String?
  fr String?
}

//* Objectives models, types, etc
enum ObjectiveProgress {
  TODO
  INPROGRESS
  DONE
}

model Objectives {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())

  title       Locales
  description Locales
  progress    ObjectiveProgress
  source      String

  hidden Boolean @default(false)
}

//* Projects models, types, etc
type Resource {
  label String?
  url   String
}

enum ProjectScopes {
  PERSONAL
  PROFESSIONAL
  OPENSOURCE
  NONPROFIT
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())

  title       Locales
  description Locales
  image       String?

  ghRepo    String[]
  website   String[]
  resources Resource[]

  relatedProjects   Project[] @relation("HasProjectInterRelation", fields: [relatedProjectsId], references: [id])
  relatedProjectsId String[]  @db.ObjectId
  realtedTo         Project[] @relation("HasProjectInterRelation", fields: [realtedToId], references: [id])
  realtedToId       String[]  @db.ObjectId

  startDate DateTime
  endDate   DateTime?

  techStack    Techs[]         @relation("TechInProject", fields: [techStackIds], references: [id])
  techStackIds String[]        @db.ObjectId
  scopes       ProjectScopes
  topics       String[]

  hidden   Boolean @default(false)
  archived Boolean @default(false)
}

//* Technologies models, types, etc
model Techs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())

  name String
  logo String?
  url  String?

  aproxProjUse  Int
  aproxExpYears Int

  usedInProjects    Project[] @relation("TechInProject", fields: [usedInProjectsIds], references: [id])
  usedInProjectsIds String[]  @db.ObjectId

  listAsSkill Boolean @default(false)
  hidden      Boolean @default(false)
}
